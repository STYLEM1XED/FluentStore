<Page x:Class="Installer.Steps.S03_BeginInstall"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Installer.Steps"
      mc:Ignorable="d"
      d:DesignHeight="400" d:DesignWidth="650"
      Background="{StaticResource ContentBackgroundBrush}"
      Loaded="Step_Loaded">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ready to Install" TextWrapping="Wrap" Grid.Row="0"
                   FontSize="24" FontWeight="Bold"/>
        <TextBlock Text="Setup is now ready to begin installing Fluent Store Beta on your computer." Grid.Row="1"
                   TextWrapping="Wrap" FontSize="14" Margin="0,8,0,0"/>
        <TextBlock Text="A self-signed code certificate will be installed and immediately removed after the app is installed."
                   Grid.Row="2" TextWrapping="Wrap" FontSize="14" Margin="0,8,0,0"/>
        <TextBlock Grid.Row="3" TextWrapping="Wrap" FontSize="14" Margin="0,8,0,0">
            <Run Text="Click 'Install' to continue with the installation," FontWeight="SemiBold"/>
            <Run Text="or click Back if you want to review or change any settings."/>
        </TextBlock>
    </Grid>
    
</Page>
